<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="autoIncrement" value="true" dbms="mysql,mariadb,h2"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>


    <changeSet id="20200404102140" author="styx\masgeek" dbms="h2,oracle,mysql,mariadb">
        <createTable tableName="api_users">

            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_name" type="varchar(18)"/>
            <column name="user_email" type="varchar(50)"/>
            <column name="user_password" type="varchar(200)"/>
            <column name="sender_id" type="varchar(11)"/>
            <column name="sms_credits" type="decimal(10,2)"/>
            <column name="auth_key" type="varchar(200)"/>


            <column name="active" type="boolean" defaultValue="true"/>

            <column name="created_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>

        </createTable>
        <modifySql dbms="mysql,mariadb">
            <append value=" engine innodb"/>
        </modifySql>
    </changeSet>


</databaseChangeLog>